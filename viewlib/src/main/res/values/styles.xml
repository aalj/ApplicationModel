<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SubmitButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/base_dp_13</item>
        <item name="android:layout_marginLeft">@dimen/base_dp_36</item>
        <item name="android:layout_marginTop">@dimen/base_dp_13</item>
        <item name="android:layout_marginRight">@dimen/base_dp_36</item>
        <item name="android:background">@drawable/common_round_rectangle_bg_theme_gradient</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/view_white</item>
        <item name="android:textSize">@dimen/base_dp_16</item>
    </style>
    <!-- 默认文本框样式 -->
    <style name="ViewEditStyle">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/base_dp_16</item>
        <item name="android:textColorHint">@color/view_FFA4A4A4</item>
        <item name="android:textColor">@color/view_FF333333</item>
        <item name="android:padding">@dimen/base_dp_20</item>
    </style>
    <!-- 默认圆角按钮样式 -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">@dimen/base_dp_30</item>
        <item name="android:paddingRight">@dimen/base_dp_30</item>
        <item name="android:textSize">@dimen/base_dp_16</item>
        <item name="android:textColor">@color/view_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:foreground">@null</item>
        <item name="android:focusable">false</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 不带圆角按钮样式 -->
    <style name="RectButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/selector_button_rect</item>
    </style>


    <!-- 默认水平分割线样式 -->
    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_dp_1</item>
        <item name="android:background">@color/view_line</item>
    </style>

    <!-- 默认垂直分割线样式 -->
    <style name="VerticalLineStyle">
        <item name="android:layout_width">@dimen/base_dp_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/view_line</item>
    </style>


</resources>